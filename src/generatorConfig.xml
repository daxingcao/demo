<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
	<!-- jar包位置 -->
	<classPathEntry
		location="D://MyDownloads/mysql-connector-java-5.1.8.jar" />

	<context id="context1">
		<commentGenerator>
			<!-- 是否去除自动生成的注释 true：是 ： false:否 -->
			<property name="suppressAllComments" value="true" />
		</commentGenerator>

		<!-- 连接数据库 -->
		<jdbcConnection 
		    connectionURL="jdbc:mysql://172.16.0.26:3306/test"
			driverClass="com.mysql.jdbc.Driver" 
			password="Hro@1%4"
			userId="hro" />

		<!-- 生成pojo类的位置 -->
		<javaModelGenerator targetPackage="com.chat.main.entity"
			targetProject="Chat/src">
		</javaModelGenerator>

		<!-- 生成映射文件的位置 -->
		<sqlMapGenerator targetPackage="resource.mapper"
			targetProject="Chat/src">
		</sqlMapGenerator>

		<!-- 接口生成位置 -->
		<javaClientGenerator targetPackage="com.chat.main.mapper"
			targetProject="Chat/src" type="XMLMAPPER" />

		<!-- 数据库中的表 -->
		<table tableName="simple_message"/>
	</context>
</generatorConfiguration>